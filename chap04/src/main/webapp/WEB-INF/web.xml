<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
   
   <servlet>
  	<servlet-name>appServlet</servlet-name>
  	<servlet-class>chap04.servlet.DispatcherServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>addEmployee</servlet-name>
  	<servlet-class>chap04.servlet.AddEmployeeServlet</servlet-class>
  </servlet>
  
  	<servlet>
		<servlet-name>addForm</servlet-name>
		<jsp-file>/WEB-INF/views/employee/addForm.jsp</jsp-file>
	</servlet>
	
	 <servlet-mapping>
		<servlet-name>addEmployee</servlet-name>
		<url-pattern>/employee/addemp</url-pattern>
	</servlet-mapping>
	
	
	<servlet-mapping>
		<servlet-name>addForm</servlet-name>
		<url-pattern>/employee/addform</url-pattern>
	</servlet-mapping>
  
  <servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
</web-app>